<div>
  <h2>{{title}}</h2>
  posted by:
  {{user.name}}

  {{content}}

  <div>
    {{#if comments.length}}
      <div class='col-md-6'>
        <h3>Comments:</h3>

        {{#each comments as |comment|}}
          <div class='row mb-2'>
            <div class='col-md-8'>
              {{!-- <h4><a href='/post/'>{{comment.content}}
                  posted by NAME{{name}}</a></h4> --}}
              <h4>{{comment.content}}
                posted by NAME{{comment.user_id.name}}</h4>
            </div>
            <div class='col-md-4'>
              <button
                class='btn btn-sm btn-danger'
                data-id='{{post.id}}'
              >DELETE</button>
            </div>
          </div>
        {{/each}}
      </div>
    {{/if}}

  </div>
</div>