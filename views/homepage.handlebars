<nav class="nav">
  <a class="nav-link" href="/">Homepage</a>
  <a class="nav-link" href="/dashboard">Dashboard</a>
      {{#if logged_in}}
      <a class="nav-link" href="#"><button class='no-button' id='logout'>logout</button></a>"
        
      {{else}}
        <a class="nav-link" href='/login'>Login</a>
      {{/if}}
</nav>

{{#each posts as |post|}}
  <div class='row mb-4 project'>
    <div class='col-md-5'>
      <h2>
        <!-- Call helper function with triple brackets to render the emoji span as HTML -->
        <h1>{{post.id}}:{{post.title}}</h1>
      <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
    <div>
    {{#each comments as |comment|}}
      <p>{{comment.content}} {{format_date comment.date_created}}</p>
    {{/each}}
    </div>
    <div class='col-md-7'>
      <p>
        {{post.content}}
      </p>
    </div>
  </div>

{{/each}}